@import 'nib'

$helv    = 'Helvetica Neue', Helvetica, Arial, sans-serif
$advBold = 'adv', $helv
$bgColor = #f6f7f9
$teal    = #22d3ad

@font-face
  font-family: 'adv'
  src: url('../fonts/adventor-bold.eot')
  src: url('../fonts/adventor-bold.eot?#iefix') format('embedded-opentype'),
       url('../fonts/adventor-bold.woff') format('woff'),
       url('../fonts/adventor-bold.ttf') format('truetype'),
       url('../fonts/adventor-bold.svg#texgyreadventorbold') format('svg')
  font-weight: bold
  font-style: normal


::-moz-selection
  background: #000
  color: #fff
  text-shadow: none


::selection
  background: #000
  color: #fff
  text-shadow: none


html
  background-color $bgColor
  font-family $helv
  font-size: 10px
  text-rendering: optimizeLegibility
  font-smoothing: antialiased
  color #222

body
  margin 0 auto
  width 80%

h1, h2, h3
  font-family $advBold

h1
  font-size 12rem
  line-height .9
  letter-spacing -.2rem
  margin 2rem 0
  color $teal
  position relative
  left -.8rem


h2
  font-size 3.5rem
  width 70%
  line-height 1.3
  color #bbb

  em
    font-style normal



h3
  font-size 3.5rem

  em
    font-style normal
    background-color #ccc
    color $bgColor
    border-radius 50%
    width 4rem
    height 4rem
    font-size 2.5rem
    line-height 1.4
    letter-spacing -.2rem
    display inline-block
    text-align center
    margin-right 2rem
    position relative
    top -.2rem
    margin-left -6.5rem


p
  font-family monospace
  font-size 2rem
  color #555
  line-height 1.5
  max-width 70rem

  a
    color $teal
    text-decoration none
    border-bottom 1px dashed #999

    &:hover
      color #999


footer
  text-align center
  margin 10rem 0
  font-size 2rem

  a
    color #444

